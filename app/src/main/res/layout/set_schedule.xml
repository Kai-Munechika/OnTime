<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/backButton"
            app:srcCompat="@drawable/arrow"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="15dp"
            android:onClick="finish"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="Set your schedule"
                    android:textSize="24dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <View
                    android:id="@+id/horzLine"
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:background="#FFFF"
                    android:layout_marginTop="11dp"

                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:text="What time would you like to start"
                    android:layout_marginTop="15dp"
                    android:textSize="18dp"
                    android:textColor="@color/colorText"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal">
                <TextView
                    android:textColor="@color/colorText"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"
                    android:text="receiving alarms?"/>
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:text="Monday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/MondayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />

            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Tuesday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/TuesdayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Wednesday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/WednesdayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Thursday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/ThursdayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Friday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/FridayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Saturday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/SaturdayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <TextView
                    android:text="Sunday"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/SundayTimeTextView"
                    android:text="None"
                    android:textSize="23dp"
                    android:textColor="@color/colorText"
                    android:onClick="pickTime"
                    />
            </TableRow>

            <TableRow
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                >
                <Button
                    android:text="SAVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorText"
                    android:onClick="saveSchedule"
                    />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</ScrollView>