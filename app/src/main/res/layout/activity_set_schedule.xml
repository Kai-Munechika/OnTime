<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:background="@color/colorPrimary"
                android:onClick="finish"
                app:srcCompat="@drawable/ic_dehaze_white_24dp"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TableRow
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="Set your schedule"
                        android:textColor="@color/colorText"
                        android:textSize="24dp"
                        />
                </TableRow>

                <TableRow
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/horzLine"
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="11dp"
                        android:background="#FFFF"

                        />
                </TableRow>

                <TableRow
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="What time would you like to start"
                        android:textColor="@color/colorText"
                        android:textSize="18dp"
                        />
                </TableRow>

                <TableRow
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="9dp"
                        android:text="receiving alarms?"
                        android:textColor="@color/colorText"
                        android:textSize="18dp"/>
                </TableRow>

                <TableRow
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Monday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/MondayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Tuesday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/TuesdayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Wednesday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/WednesdayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Thursday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/ThursdayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Friday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/FridayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Saturday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/SaturdayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Sunday"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/SundayTimeTextView"
                        android:layout_width="120dp"
                        android:onClick="pickTime"
                        android:text="None"
                        android:textColor="@color/colorText"
                        android:textSize="23dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAccent"
                        android:onClick="saveSchedule"
                        android:text="SAVE"
                        android:textColor="@color/colorText"
                        />
                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>

</android.support.v4.widget.DrawerLayout>